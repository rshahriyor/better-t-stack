{
  "name": "better-t-stack",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "type": "module",
  "scripts": {
    "dev": "npm run dev --workspaces",
    "build": "npm run build --workspaces",
    "check-types": "npm run check-types --workspaces",
    "dev:native": "npm run dev --workspace native",
    "dev:web": "npm run dev --workspace web",
    "dev:server": "npm run dev --workspace server",
    "db:push": "npm run db:push --workspace @better-t-stack/db",
    "db:studio": "npm run db:studio --workspace @better-t-stack/db",
    "db:generate": "npm run db:generate --workspace @better-t-stack/db",
    "db:migrate": "npm run db:migrate --workspace @better-t-stack/db",
    "db:local": "npm run db:local --workspace @better-t-stack/db"
  },
  "dependencies": {
    "@better-t-stack/env": "*",
    "dotenv": "^17.2.2",
    "zod": "^4.1.13"
  },
  "devDependencies": {
    "@better-t-stack/config": "*",
    "@types/node": "^22.13.14",
    "typescript": "^5"
  },
  "packageManager": "npm@11.6.4"
}
